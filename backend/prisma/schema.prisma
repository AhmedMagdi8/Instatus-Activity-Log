// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Event {
    id          String      @id @default(cuid())
    object      String
    actor_id    String
    actor_name  String
    group       String
    action      EventAction @relation(fields: [actionId], references: [id])
    actionId    String
    target_id   String
    target_name String
    location    String
    occurred_at DateTime
    metadata    Metadata    @relation(fields: [metadataId], references: [id])
    metadataId  String
}

model EventAction {
    id     String  @id @default(cuid())
    object String
    name   String
    events Event[]
}

model Metadata {
    id          String  @id @default(cuid())
    redirect    String
    description String
    xRequestId  String
    events      Event[]
}
